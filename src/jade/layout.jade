doctype html
mixin js(path)
  script(type='text/javascript')
    | require('#{path}')
mixin js_async(path)
  script(type='text/javascript', src="."+path, async='async')
mixin css(path)
  link(rel='stylesheet', href=path)
mixin template(id)
  script(id=id, type="text/x-jquery-tmpl")
html(lang='ja')
  head
    title= name
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name="viewport" content="width=720, initial-scale=1")
    //- +css('https://fonts.googleapis.com/css?family=Titillium+Web:200,400,700')
    block header
  body
    .js-loader
      block loadFiles
    block contents
